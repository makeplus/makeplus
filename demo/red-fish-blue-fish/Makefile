include $(shell ../../bin/make+)

50-50 = return $((RANDOM%2))

fish: 1-fish $(+50-50?2-fish)

1-fish: $(+50-50?red-1-fish|blue-1-fish)
2-fish: $(+50-50?red-2-fish|blue-2-fish)

%-1-fish:
	@echo -e "$($(@:%-1-fish=%))$$fish$(norm)"
%-2-fish:
	@echo -e "$($(@:%-2-fish=%))$$fish$(norm)"

define fish
                     ___            __________
                    /   \          /          \\
                 __/_/_/_\________/ / / /  /   \\
          ,,----'                 ------  / /   \           _
        ,/   ) ) ) ) ) ) ) ) ) ) ) ) ) ) )\/ /  /        ,/' \\
    ./''  ,\  ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) )\ /       /'  /  \\
 ./''  O , ,\) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) )------' / / / /
 (____ , , , ,|) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) )----- /
 \.  \ , , , | ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ) ----- \\
   `\.   ___/ ) )_______  ) ) ) ) ) ) ) ) ) ) ) ------. \ \ \ \\
      ``\..) ) ) )______\) ) ) ) ) ) ) ) ) ) /         \.  \  /
           `\..    _____/ ) ) ) ) ) ) ) ) /--__          `\._/
               ``\________________------'''\   \\
                   \ \ \/           \  \  \ \  /
                    \__/             \________/
endef
export fish

red = \033[31m
blue = \033[34m
norm = \033[39m
